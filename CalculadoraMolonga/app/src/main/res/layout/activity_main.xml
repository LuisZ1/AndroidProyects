<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@android:color/black">

    <!-- /////////////////////VISOR ESTADO ACTUAL////////////////////////// -->
    <TextView
        android:id="@+id/txtResultado2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="36sp"
        android:layout_weight="20"
        android:text=""
        android:textColor="@android:color/white" />

    <!-- /////////////////////RESULTADO FINAL////////////////////////// -->
    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="36sp" />

    <!-- /////////////////////BOTONES////////////////////////// -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_below="@+id/ResultadoFinal"
        android:layout_weight="60">


        <!-- ///FILA 1// -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="25">

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:background="@drawable/rounddarkgrey"
                android:text="7"
                android:textColor="#FFF"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:background="@drawable/rounddarkgrey"
                android:text="8"
                android:textColor="#FFF"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:background="@drawable/rounddarkgrey"
                android:text="9"
                android:textColor="#FFF"
                android:textSize="40sp" />

            <Button
                android:layout_margin="2dp"
                android:id="@+id/btnDiv2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="/"
                android:textSize="40sp"
                android:background="@drawable/roundorange"
                android:textColor="#FFFFFF"/>


        </LinearLayout>

        <!-- ///FILA 2// -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="25">

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:background="@drawable/rounddarkgrey"
                android:text="4"
                android:textColor="#FFF"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:background="@drawable/rounddarkgrey"
                android:text="5"
                android:textColor="#FFF"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:background="@drawable/rounddarkgrey"
                android:text="6"
                android:textColor="#FFF"
                android:textSize="40sp" />

            <Button
                android:layout_margin="2dp"
                android:id="@+id/btnRES"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:layout_weight="25"
                android:textSize="40sp"
                android:background="@drawable/roundorange"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- ///FILA 3// -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="25">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:background="@drawable/rounddarkgrey"
                android:text="1"
                android:textColor="#FFF"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:background="@drawable/rounddarkgrey"
                android:text="2"
                android:textColor="#FFF"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:background="@drawable/rounddarkgrey"
                android:text="3"
                android:textColor="#FFF"
                android:textSize="40sp" />

            <Button
                android:layout_margin="2dp"
                android:id="@+id/btnSUM"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+"
                android:layout_weight="25"
                android:textSize="40sp"
                android:background="@drawable/roundorange"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <!-- ///FILA 4// -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="25">

            <Button
                android:layout_margin="2dp"
                android:id="@+id/btnLimpiar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="C"
                android:layout_weight="25"
                android:textSize="40sp"
                android:background="@drawable/roundlightgrey"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:background="@drawable/rounddarkgrey"
                android:text="0"
                android:textColor="#FFF"
                android:textSize="40sp" />

            <Button
                android:layout_margin="2dp"
                android:id="@+id/btnRes2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="="
                android:layout_weight="25"
                android:textSize="40sp"

                android:background="@drawable/roundlightgrey"
                android:textColor="#000000" />

            <Button
                android:layout_margin="2dp"
                android:id="@+id/btnMult"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="x"
                android:layout_weight="25"
                android:textSize="40sp"
                android:background="@drawable/roundorange"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>